@model InmobiliariaAlcaraz.Models.Pago
@{
    ViewData["Title"] = "Editar Pago";
    var contrato = ViewBag.Contrato as Contrato;
}

<h1>Editar Pago</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Editar" method="post">
            <input type="hidden" asp-for="IdPago" />
            <input type="hidden" asp-for="IdContrato" />
            <input type="hidden" asp-for="IdUsuarioCreacion" />
            <input type="hidden" asp-for="FechaCreacion" />
            <input type="hidden" asp-for="Monto" />
            <input type="hidden" asp-for="EsMulta" />

            <div class="mb-3">
                <label asp-for="IdContrato" class="form-label"></label>
                <input asp-for="IdContrato" class="form-control" value="@contrato?.IdContrato" disabled />
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Monto" class="form-label"></label>
                <input asp-for="Monto" class="form-control" value="@Model.Monto.ToString("C")" disabled />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaPago" class="form-label"></label>
                <input asp-for="FechaPago" class="form-control" type="date" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NumeroPago" class="form-label"></label>
                <input asp-for="NumeroPago" class="form-control" />
                <span asp-validation-for="NumeroPago" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Detalle" class="form-label"></label>
                <input asp-for="Detalle" class="form-control" />
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
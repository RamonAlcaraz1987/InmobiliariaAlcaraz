@model InmobiliariaAlcaraz.Models.Tipo
@{
    ViewData["Title"] = "Eliminar Tipo";
}

<h1>Eliminar Tipo</h1>

<h4>¿Estás seguro que deseas eliminar este tipo?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IdTipo</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>
</div>

<form asp-action="Eliminar">
    <input type="hidden" asp-for="IdTipo" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
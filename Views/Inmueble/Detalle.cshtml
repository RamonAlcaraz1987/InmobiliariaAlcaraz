@model InmobiliariaAlcaraz.Models.Inmueble

@{
    ViewData["Title"] = "Detalle del Inmueble";
     var tipos = ViewBag.Tipos as List<InmobiliariaAlcaraz.Models.Tipo>;
    var usos = ViewBag.Usos as List<InmobiliariaAlcaraz.Models.Uso>;

    var tipoDescripcion = tipos.FirstOrDefault(t => t.IdTipo == Model.IdTipo)?.Descripcion ?? "No especificado";
    var usoDescripcion = usos.FirstOrDefault(u => u.IdUso == Model.IdUso)?.Descripcion ?? "No especificado";
}


<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@tipoDescripcion</dd>

        <dt class="col-sm-2">Uso</dt>
        <dd class="col-sm-10">@usoDescripcion</dd>

        <dt class="col-sm-2">Ambientes</dt>
        <dd class="col-sm-10">@Model.Ambientes</dd>

        <dt class="col-sm-2">Superficie</dt>
        <dd class="col-sm-10">@Model.Superficie m²</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">$@Model.Precio</dd>

        <dt class="col-sm-2">Disponible</dt>
        <dd class="col-sm-10">@((Model.Disponible == 1) ? "Sí" : "No")</dd>

        <dt class="col-sm-2">Propietario</dt>
        <dd class="col-sm-10">@Model.Duenio?.Nombre @Model.Duenio?.Apellido</dd>

        <dt class="col-sm-2">Latitud</dt>
        <dd class="col-sm-10">@Model.Latitud</dd>

        <dt class="col-sm-2">Longitud</dt>
        <dd class="col-sm-10">@Model.Longitud</dd>
    </dl>
</div>

<a class="btn btn-secondary" asp-action="Index">Volver</a>